{
  "name": "label-gun",
  "version": "1.0.0",
  "description": "Automatic label management for github issues",
  "author": "Emiliano Heyns <emiliano.heyns@iris-advies.com>",
  "license": "ISC",
  "repository": "https://github.com//label-gun.git",
  "homepage": "https://github.com//label-gun",
  "bugs": "https://github.com//label-gun/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "nodemon --exec \"npm start\"",
    "start": "probot run ./lib/index.js",
    "lint": "standard **/*.ts --fix",
    "test": "jest && standard **/*.ts",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage",
    "heroku-postbuild": "echo Skip build on Heroku"
  },
  "dependencies": {
    "nock": "^10.0.6",
    "@types/nock": "^10.0.3",
    "probot": "^9.10.2"
  },
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@types/node": "^12.6.2",
    "eslint-plugin-typescript": "^0.14.0",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "smee-client": "^1.1.0",
    "standard": "^13.0.2",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3",
    "typescript-eslint-parser": "^22.0.0"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "parser": "typescript-eslint-parser",
    "env": [
      "jest"
    ],
    "plugins": [
      "typescript"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "heroku-run-build-script": true
}
